<section class="photo-row-container">
  <div class="photo-row-title">Chapters</div>

  <div class="photo-row">
    <%= link_to image_tag("https://res.cloudinary.com/dqaturjpm/image/upload/v1752423665/Brittany/IMG_8867_-_Grande_eabumo.jpg", class: "photo-item"), "/brittany" %>
    <%= link_to image_tag("https://res.cloudinary.com/dqaturjpm/image/upload/v1752423661/Brittany/IMG_8190_-_Grande_sb7nvh.jpg", class: "photo-item"), "/brittany" %>
    <%= link_to image_tag("https://res.cloudinary.com/dqaturjpm/image/upload/v1752423705/NewYork/IMG_8434_-_Moyenne_k8k9rz.jpg", class: "photo-item"), "/new_york" %>
    <%= link_to image_tag("https://res.cloudinary.com/dqaturjpm/image/upload/v1752426823/Paris/IMG_5145_-_Grande_omzndj.jpg", class: "photo-item"), "/new_york" %>
