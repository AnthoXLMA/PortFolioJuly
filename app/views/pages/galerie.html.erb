<div class="container-2-3-wrapper">
  <section class="container-2">
    <%= image_tag("https://res.cloudinary.com/dqaturjpm/image/upload/v1752423688/NewYork/_MG_2109_-_Grande_r9vrvf.jpg", class: "photo-item-1") %>
    <div class="image-caption">November Doors of Manhattan in 2025</div>
    <div class="image-caption"><%= link_to "More pictures of New York", "/new_york" %></div>
  </section>

  <section class="container-3">
    <%= image_tag("https://res.cloudinary.com/dqaturjpm/image/upload/v1752423695/NewYork/IMG_3941_-_Grande_nl6phm.jpg", class: "photo-item-1") %>
    <div class="image-caption">Walk the Streets in New York City</div>
    <div class="image-caption"><%= link_to "More Black and White Pictures", "/new_york" %></div>
  </section>
</div>

<section class="container-1" style="padding:10px">
  <div class="gallery-grid">
    <%= link_to "/new_york", class: "gallery-thumb" do %>
      <%= image_tag("https://res.cloudinary.com/dqaturjpm/image/upload/v1752423688/NewYork/_MG_2110_-_Grande_rwakpv.jpg", alt: "Titre de l’image") %>
    <% end %>
  </div>
</section>

<style>
  body {
    font-family: 'Lato', sans-serif;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    background-color: white;
  }

  h1 {
    font-family: 'Playfair Display', sans-serif;
    font-size: 3rem;
    text-align: center;
    margin-bottom: 20px;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 16px;
    padding: 10px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .gallery-thumb {
    display: block;
    width: 100%;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    transition: transform 0.3s ease;
  }

  .gallery-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .gallery-thumb:hover {
    transform: scale(1.03);
  }

  .photo-row-container {
    position: relative;
    overflow: hidden;
    width: 100%;
    margin-bottom: 70px;
  }

/* Menu en bas à gauche sur le bloc */
.photo-row-menu {
  position: absolute;
  bottom: 10px;   /* 10px du bas */
  left: 10px;     /* 10px de la gauche */
/*  background-color: rgba(0, 0, 0, 0.6);*/
  padding: 10px 15px;
  border-radius: 6px;
  z-index: 20;  /* au-dessus des images */
}

.photo-row-menu ul {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  gap: 15px;
}

.photo-row-menu ul li a {
  color: white;
  text-decoration: none;
  font-family: 'Poppins', sans-serif;
  /*font-weight: 600;*/
  font-size: 1.1rem;
  transition: color 0.3s ease;
}

.photo-row-menu ul li a:hover {
  /*color: #9B496B;*/
  color: #8e2a50;
}

  .photo-row-title {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-family: 'Playfair Display', serif;
    font-size: 5rem;
    color: white;
/*    background-color: rgba(0, 0, 0, 0.5);*/
    padding: 0.2em 0.6em;
    border-radius: 6px;
    z-index: 10;
    pointer-events: none;
    user-select: none;
    white-space: nowrap;
  }

  .photo-row {
    display: flex;
    justify-content: center;
/*    gap: 20px;*/
    position: relative; /* important pour positionner l'overlay */
  }

  .photo-item {
    flex-shrink: 0;
    width: 300px;
    height: 600px;
    object-fit: cover;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
    position: relative;
    z-index: 1;
    cursor: pointer;
  }

  /* Voile noir semi-transparent au-dessus des images */
  .photo-row::before {
    content: "";
    position: absolute;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.35);
    pointer-events: none;
    z-index: 2;
  }

/*  .photo-item:hover {
    transform: scale(1.05);
    z-index: 5;
  }*/

  .container-2-3-wrapper {
    display: flex;
    justify-content: space-between;
    margin: 20px 40px 50px;
    gap: 20px;
    flex-wrap: wrap;
  }

  .container-2,
  .container-3 {
    display: flex;
    flex-direction: column;
    max-width: 500px;
    flex: 1 1 500px;
  }

  .container-2 {
    align-items: flex-start;
  }

  .container-3 {
    align-items: flex-end;
  }

  .photo-item-1 {
    width: 100%;
    height: auto;
    max-width: 500px;
    aspect-ratio: 5 / 4;
    object-fit: cover;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }

  .image-caption {
    margin-top: 10px;
    font-family: 'Playfair Display', serif;
    font-size: 0.9rem;
    color: #666;
    user-select: none;
    max-width: 100%;
    text-align: center;
  }

  @media (max-width: 900px) {
    .photo-item-1 {
      width: 90%;
      height: auto;
      aspect-ratio: 5/4;
      max-width: none;
    }

    .image-caption {
      width: 90%;
      font-size: 1.2rem;
    }

    .photo-row {
      flex-wrap: wrap;
      justify-content: center;
      gap: 15px;
    }

    .photo-item {
      width: 45%;
      height: auto;
      aspect-ratio: 2 / 5;
      animation: none; /* désactive animation si tu en avais avant */
    }

    .photo-row-title {
      font-size: 3rem;
      top: 10%;
      padding: 0.2em 0.4em;
    }

    .container-2-3-wrapper {
      flex-direction: column;
      margin: 20px 10px 50px;
    }

    .container-2, .container-3 {
      max-width: 100%;
      flex: none;
      align-items: center !important;
    }

    .image-caption {
      width: 90% !important;
      text-align: center !important;
    }
  }
</style>
