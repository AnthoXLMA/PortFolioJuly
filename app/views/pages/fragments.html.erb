<script>
document.addEventListener("DOMContentLoaded", () => {
  const container = document.querySelector(".grid-gallery");
  const images = Array.from(container.children);

  function shuffleWithoutAdjacentDuplicates(array) {
    let shuffled = array.slice();
    let tries = 0;
    do {
      for (let i = shuffled.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
      }
      let hasDuplicates = false;
      for (let k = 0; k < shuffled.length - 1; k++) {
        if (
          shuffled[k].querySelector('img').src ===
          shuffled[k + 1].querySelector('img').src
        ) {
          hasDuplicates = true;
          break;
        }
      }
      tries++;
    } while (hasDuplicates && tries < 10);
    return shuffled;
  }

  // Shuffle et insère les images avant d'attacher les événements
  const shuffledImages = shuffleWithoutAdjacentDuplicates(images);
  container.innerHTML = "";
  shuffledImages.forEach(img => container.appendChild(img));

  // Bouton "like"
  container.querySelectorAll(".like-btn").forEach(btn => {
    btn.addEventListener("click", e => {
      e.preventDefault();
      e.stopPropagation();
      btn.classList.toggle("liked");
    });
  });

  // Création de la popup hover dynamique
  const popup = document.createElement("div");
  popup.className = "image-popup-hover";
  popup.style.display = "none";
  popup.style.position = "fixed";
  popup.style.zIndex = "2000";
  popup.style.background = "white";
  popup.style.border = "1px solid #ccc";
  popup.style.boxShadow = "0 4px 12px rgba(0,0,0,0.3)";
  popup.style.padding = "6px";
  popup.style.maxWidth = "400px";
  popup.style.maxHeight = "80vh";
  popup.style.overflow = "hidden";
  document.body.appendChild(popup);

  container.querySelectorAll(".gallery-thumb").forEach(img => {
    img.addEventListener("mouseenter", () => {
      popup.innerHTML = `<img src="${img.src}" style="width:100%; height:auto; max-height:80vh; object-fit: contain; display:block;" alt="Aperçu">`;
      popup.style.display = "block";
    });

    img.addEventListener("mousemove", (e) => {
      const offsetX = 20;
      const offsetY = 20;
      const popupWidth = popup.offsetWidth;
      const popupHeight = popup.offsetHeight;
      const viewportWidth = window.innerWidth;
      const viewportHeight = window.innerHeight;

      let left = e.clientX + offsetX;
      let top = e.clientY + offsetY;

      if (left + popupWidth > viewportWidth) {
        left = e.clientX - popupWidth - offsetX;
      }

      if (top + popupHeight > viewportHeight) {
        top = e.clientY - popupHeight - offsetY;
      }

      popup.style.left = `${left}px`;
      popup.style.top = `${top}px`;
    });

    img.addEventListener("mouseleave", () => {
      popup.style.display = "none";
    });
  });
});
</script>


