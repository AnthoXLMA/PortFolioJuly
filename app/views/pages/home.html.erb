<section class="resume">
  <div class="slideshow-container">
    <%= image_tag("https://res.cloudinary.com/dqaturjpm/image/upload/v1752423739/AntManPosterisation_hrtrxd.jpg", alt: "Titre de l’image") %>
    <div class="intrigue-overlay">
      <div class="overlay-content">
        <h1>
          Think Quieter,<br>
          <span>Listen Louder</span>
        </h1>
        <%= link_to "Entrée", collections_path, class: "btn btn-large" %>
      </div>
    </div>
  </div>
</section>
<section class="gallery-section">
  <div style="margin-bottom: 20px;">
<h1><%= link_to "Découvrez toutes les photos", fragments_path %></h1>
  </div>
  <div class="grid-gallery">
    <% [
      "https://res.cloudinary.com/dqaturjpm/image/upload/v1752767811/Paris/IMG_5144_-_Grande_ogstwo.jpg",
      "https://res.cloudinary.com/dqaturjpm/image/upload/v1752767790/Paris/IMG_5541_-_Grande_acpuvp.jpg",
      "https://res.cloudinary.com/dqaturjpm/image/upload/v1752767801/Paris/IMG_5418_-_Grande_qvi3cw.jpg",
      "https://res.cloudinary.com/dqaturjpm/image/upload/v1752767761/Paris/IMG_5619_-_Grande_ifwk1l.jpg"
    ].each do |img_url| %>
      <div>
        <%= image_tag img_url, alt: "Titre de l’image" %>
      </div>
    <% end %>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    let slides = document.querySelectorAll(".slide");
    let current = 0;

    function showSlide(index) {
      slides.forEach((slide, i) => {
        slide.classList.remove("active");
      });
      slides[index].classList.add("active");
    }

    function nextSlide() {
      current = (current + 1) % slides.length;
      showSlide(current);
    }

    showSlide(current);
    setInterval(nextSlide, 4000);
  });
</script>

<style>
  body {
    font-family: 'Poppins', sans-serif;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
  }

  .resume {
    padding: 40px;
    width: 100%;
    height: auto;
    background-color: black;
    color: black;
  }

  .slideshow-container {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
  }

  .slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    opacity: 0;
    transition: opacity 1.5s ease-in-out;
  }

  .slide.active {
    opacity: 1;
    z-index: 1;
  }

  .intrigue-slide {
    filter: brightness(1.1) contrast(1.1) saturate(0.7);
    transform: scale(1.05);
    transition: transform 10s ease-in-out;
  }

  .intrigue-overlay {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
    width: 100%;
    height: 100%;
    background: linear-gradient(to top, rgba(0,0,0,0.7), rgba(0,0,0,0.2));
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: none;
    text-align: center;
  }

  .overlay-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 40px;
    pointer-events: auto;
  }

  .intrigue-overlay h1 {
    margin: 0;
    padding: 0 1rem;
    font-family: 'Playfair Display', serif;
    font-size: 2.8rem;
    color: white;
    line-height: 1.2;
    letter-spacing: 1px;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.6);
    animation: fadeIn 3s ease-in-out both;
  }

  .intrigue-overlay h1 span {
    display: block;
    font-size: 1.2rem;
    font-weight: 300;
    font-style: italic;
    margin-top: 0.5rem;
    white-space: nowrap;
  }

  .gallery-section {
    padding: 40px;
    background: white;
    text-align: center;
  }

  .gallery-section h2 {
    font-size: 2rem;
    margin-bottom: 30px;
  }

  .grid-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 16px;
    max-width: 1400px;
    margin: 0 auto;
  }


  .grid-gallery img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease;
    aspect-ratio: 3 / 2;
    object-fit: cover;
    width: 100%;
    height: auto;
  }

  .grid-gallery img:hover {
    transform: scale(1.03);
  }

  .btn {
    padding: 12px 30px;
    font-size: 1rem;
    font-family: 'Poppins', sans-serif;
/*    font-weight: 600;*/
    border-radius: 6px;
    text-decoration: none;
    cursor: pointer;
    transition: background-color 0.3s ease, color 0.3s ease;
    display: inline-block;
    border: 2px solid white;
    color: white;
    background-color: black;
    box-shadow: 0 0 8px rgba(255, 255, 255, 0.3);
  }

  .btn:hover,
  .btn:focus {
    background-color: white;
    color: #8e2a50;
    outline: none;
    box-shadow: 0 0 12px #8e2a50;
  }

  .btn-large {
    padding: 16px 40px;
    font-size: 1.2rem;
    border-radius: 8px;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to   { opacity: 1; transform: translateY(0); }
  }
</style>
