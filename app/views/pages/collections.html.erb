  <section class="container-2">
    <figure>
      <%= image_tag("https://res.cloudinary.com/dqaturjpm/image/upload/f_auto,q_auto,w_800/v1754776391/Sportts/IMG_0335_-_Grande_rb8mc9.jpg", class: "photo-item-1", alt: "Stadium photo") %>
      <figcaption class="image-caption">Stadium</figcaption>
      <div class="image-caption"><%= link_to "More 'Lifestyles' Pictures", "/lifestyles" %></div>
    </figure>
  </section>

  <section class="container-3">
    <figure>
      <%= image_tag("https://res.cloudinary.com/dqaturjpm/image/upload/f_auto,q_auto,w_800/v1752512083/Snow/IMG_4570_sdl3lk.jpg", class: "photo-item-1", alt: "Courchevel snow scene") %>
      <figcaption class="image-caption">La Rosière</figcaption>
      <div class="image-caption"><%= link_to "More 'Indoors' Pictures", "/interiors" %></div>
    </figure>
  </section>
</div>

<!-- ===== SECTION 3 - COMMERCIALS / SPIRITUALS ===== -->
<div class="container-2-3-wrapper">
  <section class="container-2">
    <figure>
      <%= image_tag("https://res.cloudinary.com/dqaturjpm/image/upload/f_auto,q_auto,w_800/v1752767761/Paris/IMG_5619_-_Grande_ifwk1l.jpg", class: "photo-item-1", alt: "Rivoli streetscape") %>
      <figcaption class="image-caption">Rivoli</figcaption>
      <div class="image-caption"><%= link_to "More 'Commercials' Pictures", "/commercials" %></div>
    </figure>
  </section>

  <section class="container-3">
    <figure>
      <%= image_tag("https://res.cloudinary.com/dqaturjpm/image/upload/f_auto,q_auto,w_800/v1752511599/IMG_5246_l0vdc4.jpg", class: "photo-item-1", alt: "Madrugada ambiance") %>
      <figcaption class="image-caption">Madrugada</figcaption>
      <div class="image-caption"><%= link_to "More 'Paysages' Pictures", "/spirituals" %></div>
    </figure>
  </section>
</div>

<script>
  // Apparition fluide au scroll
  document.addEventListener("scroll", () => {
    document.querySelectorAll(".photo-item-horizontal, .photo-item-1").forEach((el) => {
      if (el.getBoundingClientRect().top < window.innerHeight - 100) {
        el.classList.add("visible");
      }
    });
  });

  // Scroll horizontal fluide avec la molette
  const scroller = document.querySelector(".photo-row-horizontal");
  scroller.addEventListener("wheel", (evt) => {
    evt.preventDefault();
    scroller.scrollLeft += evt.deltaY;
  });
</script>

<style>
  body {
    font-family: 'Poppins', sans-serif;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    background-color: white;
  }

  /* SECTION HORIZONTALE */
  .photo-row-container {
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 500px;
    margin-bottom: 80px;
  }

  .photo-row-header {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 10;
  }

  .photo-row-title {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2.5rem, 6vw, 5rem);
    color: white;
    font-weight: 400;
    letter-spacing: 1px;
    pointer-events: none;
    user-select: none;
    text-align: center;
  }

  .photo-row-horizontal {
    display: flex;
    flex-wrap: nowrap;
    overflow-x: auto;
    overflow-y: hidden;
    scroll-behavior: smooth;
    height: 100%;
    width: 100%;
    position: relative;
    scroll-snap-type: x mandatory;
  }

  .photo-row-horizontal::-webkit-scrollbar {
    display: none; /* scrollbar masquée */
  }

  .photo-item-horizontal {
    flex: 0 0 auto;
    width: 400px;
    height: 100%;
    object-fit: cover;
    scroll-snap-align: start;
    transition: transform 0.4s ease, filter 0.4s ease;
    opacity: 0;
    transform: translateY(30px);
    z-index: 1;
  }

  .photo-item-horizontal.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .photo-item-horizontal:hover {
    transform: scale(1.05);
    filter: brightness(1.1);
  }

  /* GRADIENT SUPERPOSÉ */
  .photo-row-container::before {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.55), rgba(0,0,0,0.1));
    z-index: 2;
    pointer-events: none;
  }

  /* MENU OVERLAY */
  .photo-row-menu {
    position: absolute;
    bottom: 15px;
    left: 20px;
    z-index: 20;
  }

  .photo-row-menu ul {
    list-style: none;
    display: flex;
    gap: 12px;
    margin: 0;
    padding: 0;
  }

  .photo-row-menu a {
    color: white;
    text-decoration: none;
    font-size: 0.85rem;
    padding: 4px 10px;
    border-radius: 4px;
    background-color: rgba(255,255,255,0.15);
    transition: background 0.3s ease, color 0.3s ease;
  }

  .photo-row-menu a:hover {
    background-color: rgba(255,255,255,0.35);
    color: #A1866F;
  }

  /* AUTRES BLOCS */
  .container-2-3-wrapper {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    margin: 40px auto;
    gap: 20px;
    max-width: 1100px;
    padding: 0 20px;
  }

  .container-2, .container-3 {
    flex: 1 1 45%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .photo-item-1 {
    width: 100%;
    height: auto;
    aspect-ratio: 5 / 4;
    object-fit: cover;
    border-radius: 6px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.25);
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }

  .photo-item-1.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .photo-item-1:hover {
    transform: scale(1.02);
  }

  .image-caption {
    margin-top: 10px;
    font-family: 'Playfair Display', serif;
    font-size: 0.95rem;
    color: #666;
    text-align: center;
  }

  /* RESPONSIVE */
  @media (max-width: 768px) {
    .photo-row-container {
      height: 300px;
    }

    .photo-item-horizontal {
      width: 250px;
    }

    .photo-row-menu ul {
      flex-direction: column;
      gap: 6px;
    }

    .photo-row-title {
      font-size: 2.5rem;
    }
  }
</style>
