<section class="photo-row-container">
  <header class="photo-row-header">
    <h2 class="photo-row-title">Collections</h2>
  </header>

  <div class="photo-row-horizontal">
    <% collections = [
      { url: "https://res.cloudinary.com/dqaturjpm/image/upload/f_auto,q_auto,w_800/v1752672208/Brittany/IMG_8867_-_Grande_esfl2c.jpg", path: "/brittany" },
      { url: "https://res.cloudinary.com/dqaturjpm/image/upload/f_auto,q_auto,w_800/v1754507830/NewYork/IMG_4369_-_Grande_wm3ioq.jpg", path: "/new_york" },
      { url: "https://res.cloudinary.com/dqaturjpm/image/upload/f_auto,q_auto,w_800/v1752423661/Brittany/IMG_8190_-_Grande_sb7nvh.jpg", path: "/brittany" },
      { url: "https://res.cloudinary.com/dqaturjpm/image/upload/f_auto,q_auto,w_800/v1754553768/NewYork/_MG_1957_-_Grande_m55stb.jpg", path: "/new_york" },
      { url: "https://res.cloudinary.com/dqaturjpm/image/upload/f_auto,q_auto,w_800/v1754554095/NewYork/IMG_8434_-_Moyenne_ocb3iu.jpg", path: "/new_york" }
    ] %>

    <% collections.each do |photo| %>
      <%= link_to image_tag(photo[:url], class: "photo-item-horizontal", alt: "Collection photo"), photo[:path] %>
    <% end %>
  </div>

  <nav class="photo-row-menu" aria-label="Collection categories">
    <ul>
      <li><%= link_to "Silent Horizons", "/silenthorizons" %></li>
      <li><%= link_to "Willow & Stone", "/willow_and_stone" %></li>
      <li><%= link_to "Metropolitan", "/metropolitan" %></li>
      <li><%= link_to "Velvet Reverie", "/velvetreverie" %></li>
    </ul>
  </nav>
</section>

<!-- ===== SECTION 2 - LIFESTYLES / INDOORS ===== -->
