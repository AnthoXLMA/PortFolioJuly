<script>
  document.addEventListener("DOMContentLoaded", function () {
    new Swiper(".mySwiper-3D", {
      effect: "coverflow",
      grabCursor: true,
      centeredSlides: true,
      slidesPerView: "auto",
      loop: true,
      coverflowEffect: {
        rotate: 40,
        stretch: 0,
        depth: 200,
        modifier: 1,
        slideShadows: true,
      },
    });
  });
</script>


<style>
  body {
    font-family: 'Poppins', sans-serif;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    background-color: white;
  }

  h1 {
    font-family: 'Poppins', sans-serif;
    font-size: 3rem;
    text-align: center;
    margin-bottom: 20px;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 16px;
    padding: 10px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .gallery-thumb {
    display: block;
    width: 100%;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    transition: transform 0.3s ease;
  }

  .gallery-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .gallery-thumb:hover {
    transform: scale(1.03);
  }

  .photo-row-container {
    position: relative;
    overflow: hidden;
    width: 100%;
    margin-bottom: 70px;
  }

  /* Menu en bas à gauche sur le bloc */
  .photo-row-menu {
    position: absolute;
    bottom: 10px;   /* 10px du bas */
    left: 10px;     /* 10px de la gauche */
  /*  background-color: rgba(0, 0, 0, 0.6);*/
    padding: 10px 15px;
    border-radius: 6px;
    z-index: 20;  /* au-dessus des images */
  }

  .photo-row-menu ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 15px;
  }

  .photo-row-menu ul li a {
    color: white;
    text-decoration: none;
    font-family: 'Poppins', sans-serif;
    /*font-weight: 600;*/
    font-size: 0.8rem;
    transition: color 0.3s ease;
  }

  .photo-row-menu ul li a:hover {
    /*color: #9B496B;*/
    /*color: #8e2a50;*/
