<script>
document.addEventListener("DOMContentLoaded", function () {
  const lightbox = GLightbox({
    selector: '.glightbox',
    loop: true,
    touchNavigation: true,
    keyboardNavigation: true,
    closeButton: true,
  });

  function addWatermark() {
  const slideMedias = document.querySelectorAll('.gslide-media');
  slideMedias.forEach((slideMedia) => {
    if (!slideMedia.querySelector('.glightbox-watermark')) {
      const watermark = document.createElement('div');
      watermark.className = 'glightbox-watermark';
      watermark.textContent = '©ANTMAN - GimixCollections';
      slideMedia.appendChild(watermark);
    }
  });
}

  const observer = new MutationObserver(() => {
    addWatermark();
  });

  lightbox.on('open', () => {
    const slideContainer = document.querySelector('.glightbox-container');
    if (slideContainer) {
      observer.observe(slideContainer, {
        childList: true,
        subtree: true
      });
    }
    setTimeout(addWatermark, 100);
  });

  lightbox.on('slide_changed', () => {
    setTimeout(addWatermark, 50);
  });

  document.querySelectorAll(".like-btn").forEach((btn) => {
    btn.addEventListener("click", function (e) {
      e.preventDefault();
      e.stopPropagation();
      btn.classList.toggle("liked");
    });
  });

  // Shuffle logique ici (inchangée)
  const container = document.querySelector(".grid-gallery");
  const images = Array.from(container.children);

  function shuffleWithoutAdjacentDuplicates(array) {
    let shuffled = array.slice();
    let tries = 0;

    do {
      for (let i = shuffled.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
      }

      let hasDuplicates = false;
      for (let k = 0; k < shuffled.length - 1; k++) {
        if (shuffled[k].querySelector('img').src === shuffled[k + 1].querySelector('img').src) {
          hasDuplicates = true;
          break;
        }
      }

      tries++;
    } while (hasDuplicates && tries < 10);

    return shuffled;
  }

  const shuffledImages = shuffleWithoutAdjacentDuplicates(images);
  container.innerHTML = "";
  shuffledImages.forEach(img => container.appendChild(img));
});
</script>

